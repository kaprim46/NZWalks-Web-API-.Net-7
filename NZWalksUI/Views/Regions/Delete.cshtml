@model RegionDTO
@{
    ViewData["Title"] = "Delete Region";
}

<h1 class="mt-3 text-danger">Delete Region</h1>
@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <input asp-for="Id" hidden />
            <label class="form-label">Code</label>
            <input asp-for="Code" readonly class="form-control border-0 shadow" />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" readonly class="form-control border-0 shadow" />
        </div>

        <div class="mt-3">
            <label class="form-label">Image</label>
            <input asp-for="RegionImageUrl" readonly class="form-control border-0 shadow" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-success">Delete</button>
            <a asp-controller="Regions" asp-action="Index" class="btn btn-primary">Back To List</a>
        </div>
    </form>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}