@model IEnumerable<RegionDTO>


    <div class="mt-3 row">
        <div class="col-6">
            <h3 class="text-primary">New Zeland Regions</h3>
        </div>
        <div class="d-flex justify-content-end col-6">
            <a class="btn btn-primary" asp-controller="Regions" asp-action="Create">Add Region</a>
        </div>
    </div>
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var region in Model)
            {
                <tr>
                    <td>@region.Name</td>
                    <td>@region.Code</td>
                    <td>
                        <a class="btn btn-warning" asp-route-id="@region.Id" asp-controller="Regions" asp-action="Update">Edit</a>
                        <a class="btn btn-danger" asp-route-id="@region.Id" asp-controller="Regions" asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>